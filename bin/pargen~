spin=$(pwd | rev | cut -d/ -f1 |rev)
type=$(pwd | rev | cut -d/ -f2 |rev)

echo Working on spin $spin, $type

r=/protected/oporth/BHAC_GRMHD/$type/$spin/output

for file in $r/data*.dat;do 

echo $file

done
